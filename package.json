{
  "name": "jest-coverage-comment",
  "version": "1.0.29",
  "description": "Comments a pull request or commit with the jest code coverage badge, full report and tests summary",
  "author": "Misha Kav <misha.kav@gmail.com>",
  "license": "MIT",
  "keywords": [
    "actions",
    "pull-request",
    "comment",
    "message",
    "coverage",
    "jest",
    "junit"
  ],
  "bugs": {
    "url": "https://github.com/MishaKav/jest-coverage-comment/issues"
  },
  "homepage": "https://github.com/MishaKav/jest-coverage-comment/#readme",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "bump-version": "npm version patch",
    "update-v1-tag": "git tag v1 -f && git push origin v1 -f",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:coverage:tee": "npm run test:coverage | tee ./coverage/covergate.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "strip-color": "^0.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.10",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vercel/ncc": "^0.38.4",
    "babel-plugin-rewire": "^1.2.0",
    "eslint": "^8.36.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.14.0",
    "jest-junit": "^16.0.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
