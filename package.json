{
  "name": "jest-coverage-comment",
  "version": "1.0.6",
  "description": "Comments a pull request or commit with the jest code coverage badge, full report and tests summary",
  "author": "Misha Kav <misha.kav@gmail.com>",
  "license": "MIT",
  "keywords": [
    "actions",
    "pull-request",
    "comment",
    "message",
    "coverage",
    "jest",
    "junit"
  ],
  "bugs": {
    "url": "https://github.com/MishaKav/jest-coverage-comment/issues"
  },
  "homepage": "https://github.com/MishaKav/jest-coverage-comment/#readme",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:coverage:tee": "npm run test:coverage | tee ./coverage/covergate.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "dependencies": {
    "@actions/core": "^1.7.0",
    "@actions/github": "^5.0.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/node": "^17.0.29",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/parser": "^5.21.0",
    "@vercel/ncc": "^0.33.4",
    "babel-plugin-rewire": "^1.2.0",
    "eslint": "^8.14.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.1.5",
    "jest-junit": "^13.2.0",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
